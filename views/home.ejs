<%- include('partials/header'); -%> 

<div class="mb-5">
    
    <h1 class="py-5 text-center">Documenting my Dev Journey</h1>

    <%blogContent.forEach(post =>{%>
        <div class="m-2 p-3 border">
            <h2> <%= post.title %> </h2>
            <p class="info"> <%= post.content.substring(0, 100) + " ..." %> <span><a href="/posts/<%=post._id%>" class="readMore">Read more</a></span></p>
        </div>
    <%})%>

</div>

<%- include('partials/footer'); -%> 

<%- include('partials/header'); -%> 

<div class="mb-5">

    <h1 class="py-5 text-center">Documenting my Dev Journey</h1>

    <%blogContent.forEach(post =>{%>
        <div class="my-4 mx-2 p-4 border eachPost">
            <h2> <%= post.title %> </h2>
            <p class="info text-white"> <%= post.content.substring(0, 150) + " ..." %> <br><br> <span><a href="/posts/<%=post._id%>" class="readMore ">Read more</a></span></p>
        </div>
    <%})%>

</div>

<%- include('partials/footer'); -%> 